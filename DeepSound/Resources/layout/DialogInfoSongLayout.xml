
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:background="?attr/colorPrimary"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:background="?attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
              android:background="@drawable/shadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image_Cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ImagePlacholder" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000" />
                <View
                    android:background="@drawable/bg_gradient_hard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="match_parent"
                        android:background="@android:color/transparent"
                        android:layout_height="10dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/titleTextView"
                            android:layout_weight="1"
                            android:textColor="#ffffff"
                            android:background="@android:color/transparent"
                            android:text="@string/Lbl_SongInfo"
                            android:gravity="end"
                            android:layout_gravity="center_vertical"
                            android:textAlignment="textEnd"/>
                        <TextView
                            android:id="@+id/IconColse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:textColor="#ffffff"
                            android:background="@android:color/transparent"
                            android:paddingTop="10dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="36dp"
                            android:layout_marginEnd="10dp"
                            />
                    </LinearLayout>
                    <View
                        android:background="@color/gnt_gray"
                        android:layout_marginBottom="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview2"
                            android:layout_width="50dp"
                            android:background="@android:color/transparent"
                            android:layout_centerVertical="true"
                            android:layout_height="50dp"
                            app:cardCornerRadius="5dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            app:cardElevation="0dp">
                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:focusable="false"
                                android:clickable="false"
                                android:src="@drawable/ImagePlacholder"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:background="@android:color/transparent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/nameSong"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" 
                                android:textSize="18dp"
                                android:paddingStart="16dp"
                                android:textColor="#ffffff"
                                android:background="@android:color/transparent"
                                android:paddingEnd="16dp"
                                android:layout_gravity="center"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                />
                            <LinearLayout
                                android:id="@+id/LayoutPublisher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="16dp"
                                android:background="@android:color/transparent"
                                android:paddingEnd="16dp"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Lbl_By"
                                    android:textColor="#ffffff"
                                    android:gravity="start"
                                    android:layout_gravity="center"
                                    android:background="@android:color/transparent"
                                    android:textSize="14sp"
                                    android:layout_alignParentEnd="true" />
                                <TextView
                                    android:id="@+id/publisherText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:layout_gravity="center"
                                    android:forceDarkAllowed="false"
                                    android:textColor="@color/accent"
                                    android:background="@android:color/transparent"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="5dp"
                                    android:layout_alignParentEnd="true" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LayoutGenres"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="16dp"
                                android:background="@android:color/transparent"
                                android:paddingEnd="16dp"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/IconGenres"
                                    android:layout_width="20dp"
                                    android:textColor="#ffffff"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/spacing_medium"
                                    android:textSize="20sp"
                                    android:background="@android:color/transparent"
                                    android:text="#" />
                                <TextView
                                    android:id="@+id/GenresText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Lbl_Genres"
                                    android:gravity="start"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:textColor="#ffffff"
                                    android:textSize="15sp"
                                    android:background="@android:color/transparent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="0dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="20dp"
                        android:background="@android:color/transparent"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/iconLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff0000"
                            android:background="@android:color/transparent"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/textView_songLike"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginStart="5dp"
                            android:paddingEnd="4dp"
                            android:paddingStart="1dp"
                            android:textColor="#ffffff"
                            android:background="@android:color/transparent"
                            android:textSize="10sp"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/iconStars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff9900"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/textView_totalrate_songlist"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:paddingEnd="4dp"
                            android:paddingStart="1dp"
                            android:textColor="#ffffff"
                            android:textSize="10sp"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/iconViews"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textColor="#1eee6c"
                            android:background="@android:color/transparent"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/textView_views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="4dp"
                            android:paddingStart="1dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:layout_marginStart="5dp"
                            android:textSize="10sp" />
                        <TextView
                            android:id="@+id/iconShare"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textColor="#880E4F"
                            android:background="@android:color/transparent"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/textView_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="4dp"
                            android:paddingStart="1dp"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:layout_marginStart="5dp"
                            android:background="@android:color/transparent"
                            android:textSize="10sp" />
                        <TextView
                            android:id="@+id/iconComment"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textColor="#ffffff"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/textView_comment"
                            android:layout_width="wrap_content"
                            android:background="@android:color/transparent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="4dp"
                            android:paddingStart="1dp"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:layout_marginStart="5dp"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?attr/colorPrimary"
                android:paddingBottom="@dimen/spacing_large"
                android:paddingTop="@dimen/spacing_large">
                <TextView
                    android:id="@+id/aboutHeadingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Lbl_About"
                    android:textAllCaps="true"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:alpha="0.5"
                    android:layout_alignParentEnd="true" />
                <DeepSound.Library.Anjo.SuperTextLibrary.SuperTextView
                    android:id="@+id/aboutText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:textIsSelectable="true"
                    android:ellipsize="end"
                    android:lines="2"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tagHeadingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Lbl_Tags"
                    android:textAllCaps="true"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:layout_marginTop="30dp"
                    android:alpha="0.5"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_alignParentEnd="true" />
                <DeepSound.Library.Anjo.SuperTextLibrary.SuperTextView
                    android:id="@+id/tagText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:textIsSelectable="true"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lyricsHeadingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Lbl_Lyrics"
                    android:textAllCaps="true"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:layout_marginTop="30dp"
                    android:alpha="0.5"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_alignParentEnd="true" />
                <DeepSound.Library.Anjo.SuperTextLibrary.SuperTextView
                    android:id="@+id/lyricsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:textIsSelectable="true"
                    android:ellipsize="end"
                    android:lines="2"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/otherDetailsHeadingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_OtherDetails"
                        android:gravity="start"
                        android:alpha="0.5"
                        android:layout_marginTop="30dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_gravity="center"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:id="@+id/LayoutAddedOn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/AddedOnText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/Lbl_AddedOn"
                            android:gravity="start"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:layout_alignParentEnd="true" />
                        <TextView
                            android:id="@+id/dateText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@id/LayoutAgeRestriction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/AgeRestrictionTitleText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/Lbl_AgeRestriction"
                            android:gravity="start"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:layout_alignParentEnd="true" />
                        <TextView
                            android:id="@+id/AgeRestrictionText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="5dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/LayoutPaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/PaidTitleText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/Lbl_PurchaseRequired"
                            android:gravity="start"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:layout_alignParentEnd="true" />
                        <TextView
                            android:id="@+id/PaidText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="5dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/LayoutDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/DurationTitleText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/Lbl_Duration"
                            android:gravity="start"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:layout_alignParentEnd="true" />
                        <TextView
                            android:id="@+id/DurationText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="5dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_height="?android:attr/actionBarSize"
                android:layout_width="match_parent" />

            <com.google.android.gms.ads.doubleclick.PublisherAdView
                android:id="@+id/multiple_ad_sizes_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:adSize="MEDIUM_RECTANGLE,120x20,250x250,320x100,SMART_BANNER"
                app:adUnitId="@string/banner_multiple_ad_sizes_id" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>