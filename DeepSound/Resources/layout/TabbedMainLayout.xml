<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="?attr/colorPrimary"
    android:layout_height="match_parent">
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        app:umanoPanelHeight="103dp"
        app:umanoShadowHeight="4dp"
        app:umanoParallaxOffset="180dp"
        app:umanoDragView="@+id/root"
        app:umanoOverlay="true">
        <FrameLayout
            android:id="@+id/mainFragmentHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:focusable="false"
            android:fitsSystemWindows="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:clickable="true"
            android:id="@+id/root"
            android:layout_height="match_parent">
            <include
                android:id="@+id/slidepanelchildtwo_topviewtwo"
                layout="@layout/FullScreenPlayerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
    <include
        android:id="@+id/buttomnavigationBar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        layout="@layout/Custom_NavigationBar" /> 
</RelativeLayout>