<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:fitsSystemWindows="true"
	android:layout_width="match_parent"
	android:background="@drawable/rounded_dialog"
	android:layout_height="wrap_content">
	<!--Head Page -->
	<LinearLayout
		android:id="@+id/mainLayout"
		android:layout_width="match_parent"
		android:layout_gravity="center"
		android:gravity="center"
		android:layout_height="20dp">
		<View
			android:layout_width="80dp"
			android:layout_height="4dp"
			android:layout_gravity="center"
			android:layout_centerInParent="true"
			android:background="?attr/colorDivider" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/UploadSongLayout"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/UploadSongIcon"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/icon_upload_vector"
			android:layout_marginEnd="15dp"
			android:gravity="center" />
		<TextView
			android:id="@+id/UploadSongText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="15dp"
			android:text="@string/Btn_UploadSingleSong"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="17sp"
			android:layout_marginBottom="0dp" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/ImportSongLayout"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/ImportSongIcon"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/icon_Import_vector"
			android:layout_marginEnd="15dp"
			android:gravity="center" />
		<TextView
			android:id="@+id/ImportSongText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_ImportSong"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="17sp"
			android:layout_marginBottom="0dp" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/UploadAlbumLayout"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/UploadAlbumIcon"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/icon_album_vector"
			android:tint="#00a2da"
			android:layout_marginEnd="15dp"
			android:padding="5dp"
			android:gravity="center" />
		<TextView
			android:id="@+id/UploadAlbumText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_CreateAlbum"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="17sp"
			android:layout_marginBottom="0dp" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/CreatePlaylistLayout"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp" 
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/CreatePlaylistIcon"
			android:layout_width="30dp"
			android:layout_height="30dp" 
			android:src="@drawable/icon_playlist_vector" 
			android:layout_marginEnd="15dp"
			android:gravity="center" />
		<TextView
			android:id="@+id/CreatePlaylistText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_CreatePlaylist"
			android:gravity="start|center" 
			android:layout_centerVertical="true"
			android:textSize="17sp"
			android:layout_marginBottom="0dp" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/CreateStationsLayout"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp" 
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/CreateStationsIcon"
			android:layout_width="30dp"
			android:layout_height="30dp" 
			android:src="@drawable/icon_stations_vector" 
			android:padding="2dp"
			android:layout_marginEnd="15dp"
			android:gravity="center" />
		<TextView
			android:id="@+id/CreateStationsText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_CreateStation"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="17sp"
			android:layout_marginBottom="0dp" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/CreateEventLayout"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/CreateEventIcon"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/icon_event_vector"
			android:padding="1dp"
			android:layout_marginEnd="15dp"
			android:gravity="center" />
		<TextView
			android:id="@+id/CreateEventText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_CreateEvent"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="17sp"
			android:layout_marginBottom="0dp" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/CreateProductLayout"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/CreateProductIcon"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/icon_product_vector"
			android:padding="2dp"
			android:layout_marginEnd="15dp"
			android:gravity="center" />
		<TextView
			android:id="@+id/CreateProductText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_CreateProduct"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="17sp"
			android:layout_marginBottom="0dp" />
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="20dp"/>
</LinearLayout> 