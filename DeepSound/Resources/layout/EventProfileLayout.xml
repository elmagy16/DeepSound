<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/colorPrimary">
	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clipToPadding="false"
		android:scrollbars="none"
		android:scrollingCache="true">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<ImageView
					android:id="@+id/imageCover"
					android:layout_width="match_parent"
					android:layout_height="300dp"
					android:scaleType="centerCrop"
					android:src="@drawable/imageplacholder" />
				 
				<TextView
					android:id="@+id/IconBack"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:text="&gt;"
					android:layout_alignParentStart="true"
					android:textSize="25sp" 
					android:padding="15dp" 
					android:textColor="@color/bt_white"
					android:shadowColor="@color/gnt_black"
					android:shadowDx="1"
					android:shadowDy="1"
					android:shadowRadius="2"/>
				 
				<TextView
					android:id="@+id/IconMore"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:text=":"
					android:layout_alignParentEnd="true"
					android:textSize="25sp" 
					android:padding="15dp" 
					android:textColor="@color/bt_white"
					android:shadowColor="@color/gnt_black"
					android:shadowDx="1"
					android:shadowDy="1"
					android:shadowRadius="2"/>

			</RelativeLayout>
			 
			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="-20dp"
				app:cardBackgroundColor="?attr/colorFill"
				app:cardCornerRadius="20dp"
				app:cardElevation="0dp"
				app:cardUseCompatPadding="false">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginHorizontal="@dimen/spacing_large"
						android:layout_marginVertical="@dimen/spacing_mlarge"
						android:gravity="center_vertical"
						android:orientation="horizontal">

						<ImageView
							android:id="@+id/imageUser"
							android:layout_width="55dp"
							android:layout_height="55dp"
							android:scaleType="centerCrop"
							android:src="@drawable/no_profile_image_circle" />

						<View
							android:layout_width="@dimen/spacing_middle"
							android:layout_height="0dp" />
						 
						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="vertical">

							<TextView
								android:id="@+id/name"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textSize="16sp"
								android:textStyle="bold"
								android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

							<TextView
								android:id="@+id/username"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textSize="14sp"
								android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
								android:textColor="#999999" />
							 
						</LinearLayout>
						  
					</LinearLayout>

					<LinearLayout
						android:id="@+id/ButtonLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
						android:visibility="gone"
                        android:layout_marginBottom="25dp" >
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/ButtonJoin"
                            android:layout_width="0dp"
                            android:layout_height="37dp"
                            android:layout_weight="1"
                            android:tag="false"
                            android:textColor="@color/gnt_white"
                            android:drawableStart="@drawable/icon_Join_vector"
                            android:drawableTint="@color/gnt_white"
                            android:drawablePadding="-20dp" 
                            android:paddingStart="14dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:text="@string/Lbl_Join"
                            android:textSize="12sp"
                            android:background="@drawable/follow_button_profile_friends_pressed"
                            android:gravity="center" />
                        <androidx.appcompat.widget.AppCompatButton 
                            android:id="@+id/ButtonBuyTicket"
                            android:layout_width="0dp"
                            android:layout_height="37dp"
                            android:layout_weight="1" 
                            android:layout_marginStart="14dp"
                            android:paddingStart="14dp"
							android:drawableStart="@drawable/icon_tickets_vector"
							android:drawableTint="#666666"
                            android:drawablePadding="-20dp"
                            android:text="@string/Lbl_BuyTicket" 
                            android:tag="false"
                            android:textColor="#666666"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            android:background="@drawable/follow_button_profile_friends"
                            android:backgroundTint="#666666" />
                    </LinearLayout>
					 
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginHorizontal="@dimen/spacing_large"
						android:gravity="center_vertical"
						android:orientation="horizontal">

						<View
							android:layout_width="@dimen/spacing_mlarge"
							android:layout_height="0dp" />

						<ImageView
							android:layout_width="@dimen/spacing_mlarge"
							android:layout_height="@dimen/spacing_mlarge"
							android:src="@drawable/icon_tickets_vector"
							android:tint="#666666" />
						 
						<View
							android:layout_width="25dp"
							android:layout_height="0dp" />

						<TextView
							android:id="@+id/tickets"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/Lbl_AvailableTickets"
							android:maxWidth="150dp"
							android:textSize="14sp"
							android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
							android:textColor="@color/accent" />

						<View
							android:layout_width="30dp"
							android:layout_height="0dp" />

						<ImageView
							android:layout_width="@dimen/spacing_mlarge"
							android:layout_height="@dimen/spacing_mlarge"
							android:src="@drawable/ic_people_outline"
							android:visibility="invisible"
							android:tint="#666666" />

						<View
							android:layout_width="@dimen/spacing_large"
							android:visibility="invisible"
							android:layout_height="0dp" />
						 
						<TextView
							android:id="@+id/joined"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/Lbl_JoinedPeople"
							android:maxWidth="120dp"
							android:textSize="14sp"
							android:visibility="invisible"
							android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
							android:textColor="@color/accent" />

					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginHorizontal="@dimen/spacing_large"
						android:layout_marginTop="@dimen/spacing_large"
						android:orientation="horizontal">

						<View
							android:layout_width="@dimen/spacing_mlarge"
							android:layout_height="0dp" />

						<ImageView
							android:layout_width="@dimen/spacing_mlarge"
							android:layout_height="@dimen/spacing_mlarge"
							android:layout_marginTop="@dimen/spacing_medium"
							android:src="@drawable/ic_pin"
							android:tint="#666666" />

						<View
							android:layout_width="25dp"
							android:layout_height="0dp" />

						<DeepSound.Library.Anjo.SuperTextLibrary.SuperTextView
							android:id="@+id/location"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="14sp"
							android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
							android:textColor="#999999" />

					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginHorizontal="@dimen/spacing_large"
						android:layout_marginTop="@dimen/spacing_large"
						android:gravity="center_vertical"
						android:orientation="horizontal">

						<View
							android:layout_width="@dimen/spacing_mlarge"
							android:layout_height="0dp" />

						<ImageView
							android:layout_width="@dimen/spacing_mlarge"
							android:layout_height="@dimen/spacing_mlarge"
							android:src="@drawable/icon_calendar_vector"
							android:tint="#666666" />

						<View
							android:layout_width="25dp"
							android:layout_height="0dp" />

						<TextView
							android:id="@+id/date"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="14sp"
							android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
							android:textColor="#999999" />

					</LinearLayout>

					<LinearLayout
						android:id="@+id/videoTrailerLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginHorizontal="@dimen/spacing_large"
						android:layout_marginTop="@dimen/spacing_large"
						android:visibility="gone"
						android:gravity="center_vertical"
						android:orientation="horizontal">

						<View
							android:layout_width="@dimen/spacing_mlarge"
							android:layout_height="0dp" />

						<ImageView
							android:layout_width="@dimen/spacing_mlarge"
							android:layout_height="@dimen/spacing_mlarge"
							android:src="@drawable/icon_video_vector"
							android:tint="#666666" />

						<View
							android:layout_width="25dp"
							android:layout_height="0dp" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/Lbl_ViewTrailer"
							android:textSize="14sp"
							android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
							android:textColor="#999999" />

					</LinearLayout>
					 
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:padding="@dimen/spacing_large"
						android:scrollbars="vertical"
						android:scrollingCache="true" >

						<TextView
							android:id="@+id/description"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:textSize="14sp"
							android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
							android:textColor="#999999" />

					</LinearLayout>

					<View
						android:layout_height="?attr/actionBarSize"
						android:layout_width="match_parent" />

				</LinearLayout>

			</androidx.cardview.widget.CardView>

		</LinearLayout>

	</androidx.core.widget.NestedScrollView>
</LinearLayout>